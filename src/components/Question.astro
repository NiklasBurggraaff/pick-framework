---
import Choice from "./Choice.astro";

export interface Props {
    choices: {
        label: string;
        href: string;
    }[];
}

const { choices } = Astro.props;
---

<h2>Question</h2>
<div class="question">
    <slot />
</div>

<h3>Choose option below:</h3>
<div class="choices-grid">
    <ul role="list">
        {
            choices.map((choice) => (
                <Choice label={choice.label} href={choice.href} />
            ))
        }
    </ul>
</div>

<style>
    .question {
        line-height: 1.6;
        margin: 1rem 0;
        border: 1px solid rgba(var(--accent), 25%);
        background-color: white;
        padding: 1rem;
        border-radius: 0.4rem;
    }
    strong {
        color: rgb(var(--accent));
    }
    .choices-grid {
        overflow-x: auto;
    }
    .choices-grid ul {
        min-width: fit-content;
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1rem;
        padding: 0;
    }
</style>
